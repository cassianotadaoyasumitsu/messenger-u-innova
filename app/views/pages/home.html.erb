<h1 class="mb-4">Sending Messages</h1>

<% if user_signed_in? %>
  <div class="card mb-4">
    <div class="card-body">
      <h5 class="card-title">To: <%= current_user.phone %></h5>

      <%= form_with url: sms_path, method: :post, local: true, class: 'mb-3' do %>
        <div class="form-group">
          <label for="message">Escreva sua Mensagem:</label>
          <%= text_field_tag :message, nil, class: 'form-control', required: true %>
        </div>
        <br>
        <%= submit_tag "Enviar SMS", class: 'btn btn-primary', data: { confirm: 'Tem certeza que deseja enviar a mensagem?' } %>
      <% end %>

      <%= form_with url: whatsapp_path, method: :post, local: true do %>
        <div class="form-group">
          <label for="message">Escreva sua Mensagem:</label>
          <%= text_field_tag :message, nil, class: 'form-control', required: true %>
        </div>
        <br>
        <%= submit_tag "Enviar Whatsapp", class: 'btn btn-success', data: { confirm: 'Tem certeza que deseja enviar a mensagem?' } %>
      <% end %>
    </div>
  </div>
<% end %>