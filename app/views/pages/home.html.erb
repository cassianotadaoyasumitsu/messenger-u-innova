<h1>Sending Messages</h1>

<% if user_signed_in? %>
  <p>To: <%= current_user.phone %></p>
  <p>Message: <%= current_user.email %></p>

  <%= button_to "SMS", sms_path, method: :post, data: { confirm: 'Tem certeza que deseja enviar a mensagem?' }%>
  <%= button_to "Zap", whatsapp_path, method: :post, data: { confirm: 'Tem certeza que deseja enviar a mensagem?' }%>
<% end %>
